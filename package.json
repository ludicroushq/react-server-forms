{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build --filter 'react-server-forms' --filter '@react-server-forms/*'",
    "ci:test": "concurrently pnpm:ci:test:*",
    "ci:test:lint": "eslint .",
    "ci:test:pretty": "prettier --check .",
    "dev": "turbo dev  --filter 'react-server-forms' --filter '@react-server-forms/*'",
    "prepare": "husky",
    "test": "concurrently pnpm:test:*",
    "test:lint": "eslint --fix .",
    "test:pretty": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "neostandard": "^0.12.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --ignore-unknown --write"
    ]
  }
}
